<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.BankSystem.AccountManagementController"
          alignment="CENTER"
          hgap="15"
          vgap="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Account Management"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"
           GridPane.columnSpan="3"/>

    <!-- Table -->
    <TableView fx:id="accountTable"
               prefHeight="320"
               GridPane.columnSpan="3"
               GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="accountIdColumn" text="Account ID" prefWidth="150"/>
            <TableColumn fx:id="accountNameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="accountBalanceColumn" text="Balance" prefWidth="130"/>
            <TableColumn fx:id="accountTypeColumn" text="Type" prefWidth="130"/>
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox spacing="10"
          alignment="CENTER"
          GridPane.columnSpan="3"
          GridPane.rowIndex="2">

        <Button fx:id="addAccountButton" text="Add Account" prefWidth="130"/>
        <Button fx:id="deleteAccountButton" text="Delete" prefWidth="130"/>
        <Button fx:id="depositButton" text="Deposit" prefWidth="130"/>
        <Button fx:id="withdrawButton" text="Withdraw" prefWidth="130"/>
        <Button fx:id="applyInterestButton" text="Apply Interest" prefWidth="130"/>

    </HBox>

</GridPane>
