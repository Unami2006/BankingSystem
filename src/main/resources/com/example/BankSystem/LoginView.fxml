<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.BankSystem.LoginController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Bank System Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <!-- Username -->
    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="Enter username"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Password -->
    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter password"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button fx:id="loginButton" text="Login" onAction="#login"/>
        <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
        <Button fx:id="createAccountButton" text="Create Account" onAction="#handleCreateAccount"/>
    </HBox>

</GridPane>
