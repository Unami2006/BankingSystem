<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.BankSystem.CustomerRegistrationController"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Proper padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Customer Registration" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <!-- Full Name -->
    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Email -->
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Phone -->
    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Address -->
    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Username -->
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!-- Password -->
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Confirm Password -->
    <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <!-- Buttons -->
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button text="Register" fx:id="registerButton" onAction="#handleRegister"/>
        <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"/>
    </HBox>

</GridPane>
