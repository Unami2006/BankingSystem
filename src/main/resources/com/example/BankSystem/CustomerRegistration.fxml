<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.BankSystem.CustomerRegistrationController"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Customer Registration" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <!-- Full Name -->
    <Label text="Full Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Email -->
    <Label text="Email:" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Phone -->
    <Label text="Phone:" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Address -->
    <Label text="Address:" GridPane.rowIndex="4"/>
    <TextField fx:id="addressField" promptText="Enter address" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Username -->
    <Label text="Username:" GridPane.rowIndex="5"/>
    <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!-- Password -->
    <Label text="Password:" GridPane.rowIndex="6"/>
    <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Save Customer" onAction="#saveCustomer"/>
        <Button text="Clear" onAction="#clearFields"/>
    </HBox>

</GridPane>
