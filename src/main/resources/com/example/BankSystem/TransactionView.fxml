<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.BankSystem.TransactionController"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Transaction Management" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- TableView for Transactions -->
    <TableView fx:id="transactionTable">
        <columns>
            <TableColumn fx:id="transactionIdColumn" text="Transaction ID"/>
            <TableColumn fx:id="accountIdColumn" text="Account ID"/>
            <TableColumn fx:id="amountColumn" text="Amount"/>
            <TableColumn fx:id="typeColumn" text="Type"/>
        </columns>
    </TableView>


    <!-- Buttons -->
    <Button text="Add Transaction" fx:id="addTransactionButton" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="150"/>
    <Button text="Delete Transaction" fx:id="deleteTransactionButton" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="150"/>
    <Button text="Refresh" fx:id="refreshButton" GridPane.columnIndex="2" GridPane.rowIndex="2" prefWidth="100"/>

</GridPane>
