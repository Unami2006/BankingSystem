<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<GridPane xmlns:fx="http://javafx.com/fxml"

          alignment="CENTER" hgap="10" vgap="10">

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Transaction Management" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- TableView for Transactions -->
    <TableView fx:id="transactionTable" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3">
        <columns>
            <TableColumn fx:id="transactionIdColumn" text="Transaction ID"/>
            <TableColumn fx:id="accountIdColumn" text="Account ID"/>
            <TableColumn fx:id="amountColumn" text="Amount"/>
            <TableColumn fx:id="typeColumn" text="Type"/>
        </columns>
    </TableView>

    <!-- Transaction Controls -->
    <Label text="Account ID:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="accountIdField" promptText="Enter Account ID" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Transaction Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ChoiceBox fx:id="transactionTypeChoice" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Deposit"/>
                <String fx:value="Withdraw"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="amountField" promptText="Enter amount" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Execute Transaction" fx:id="executeTransactionButton" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" prefWidth="200"/>

    <!-- Table Control Buttons -->
    <Button text="Refresh" fx:id="refreshButton" GridPane.columnIndex="0" GridPane.rowIndex="6" prefWidth="100"/>
</GridPane>
