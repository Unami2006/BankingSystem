<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.BankSystem.MainController"
            prefWidth="700" prefHeight="480">

    <!-- ============================
            TOP MENU BAR
    ============================= -->
    <top>
        <MenuBar>

            <Menu text="Customer">
                <MenuItem text="Register New Customer"
                          onAction="#openCustomerView"/>
            </Menu>

            <Menu text="Account">
                <MenuItem text="Manage Accounts"
                          onAction="#openAccountView"/>
            </Menu>

            <Menu text="Transactions">
                <MenuItem text="Deposit / Withdraw"
                          onAction="#openTransactionView"/>
            </Menu>

            <Menu text="Logout">
                <MenuItem text="Logout"
                          onAction="#logout"/>
            </Menu>

        </MenuBar>
    </top>

    <!-- ============================
             CENTER CONTENT
    ============================= -->
    <center>
        <VBox spacing="20"
              alignment="CENTER"
              style="-fx-padding: 40;">

            <Label text="Welcome to the Banking System Dashboard"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <Label text="Use the menu above to navigate through available features."
                   style="-fx-font-size: 14px;"/>

        </VBox>
    </center>

</BorderPane>
