<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.BankSystem.CustomerController"
            prefWidth="600" prefHeight="450">

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <!-- Correct padding using Insets -->
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Title -->
            <Label text="Customer Registration" style="-fx-font-size: 18; -fx-font-weight: bold;"
                   GridPane.columnSpan="2" GridPane.rowIndex="0"/>

            <!-- Full Name -->
            <Label text="Full Name:" GridPane.rowIndex="1"/>
            <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- ID / Passport -->
            <Label text="ID/Passport:" GridPane.rowIndex="2"/>
            <TextField fx:id="idField" promptText="Enter ID or passport" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Email -->
            <Label text="Email:" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Phone -->
            <Label text="Phone:" GridPane.rowIndex="4"/>
            <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <!-- Address -->
            <Label text="Address:" GridPane.rowIndex="5"/>
            <TextField fx:id="addressField" promptText="Enter address" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <!-- Customer Type -->
            <Label text="Customer Type:" GridPane.rowIndex="6"/>
            <ChoiceBox fx:id="typeChoice" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Individual"/>
                        <String fx:value="Company"/>
                    </FXCollections>
                </items>
            </ChoiceBox>

            <!-- Save Button -->
            <Button text="Save Customer" onAction="#saveCustomer"
                    GridPane.columnSpan="2" GridPane.rowIndex="7" GridPane.halignment="CENTER" prefWidth="150"/>
        </GridPane>
    </center>
</BorderPane>
