<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.BankSystem.CustomerController"
            prefWidth="600" prefHeight="450">

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="Customer Registration"
                   style="-fx-font-size: 18; -fx-font-weight: bold;"
                   GridPane.columnSpan="2" GridPane.rowIndex="0"/>

            <Label text="Full Name:" GridPane.rowIndex="1"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="ID/Passport:" GridPane.rowIndex="2"/>
            <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Email:" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Phone:" GridPane.rowIndex="4"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Address:" GridPane.rowIndex="5"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Customer Type:" GridPane.rowIndex="6"/>
            <ChoiceBox fx:id="typeChoice" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Button text="Save Customer" onAction="#saveCustomer"
                    GridPane.columnSpan="2" GridPane.rowIndex="7"/>
        </GridPane>
    </center>

</BorderPane>
